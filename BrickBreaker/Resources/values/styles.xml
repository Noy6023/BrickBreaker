<resources>

    <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light">
    <!-- Customize your theme here. -->
      <item name="basePrimaryBackgroundColour">@color/color1</item>
      <item name="baseSecondaryBackgroundColour">@color/colorDark1</item>
      <item name="colorPrimary">@color/colorDark1</item>
      <item name="colorPrimaryDark">@color/colorDark1</item>
      <item name="colorSecondary">@android:color/white</item>
      <item name="colorAccent">@color/colorDark1</item>
      <item name="fontFamily">@font/fredokaone</item>
      <item name="android:textColorPrimary">#ffffff</item>
      <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
      <item name="android:windowContentTransitions">true</item>
      <item name="android:textColorSecondary">@color/colorDark1</item>
      <item name="android:colorBackground">@color/color1</item>
  </style>
  <style name="AppThemeDark" parent="Theme.AppCompat.Light">
    <!-- Customize your theme here. -->
      <item name="baseSecondaryBackgroundColour">@color/color1</item>
      <item name="basePrimaryBackgroundColour">@color/colorDark1</item>
      <item name="colorPrimary">@color/colorDark1</item>
      <item name="colorSecondary">@android:color/white</item>
      <item name="colorPrimaryDark">@color/colorDark1</item>
      <item name="colorAccent">@android:color/white</item>
      <item name="fontFamily">@font/fredokaone</item>
      <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
      <item name="android:windowContentTransitions">true</item>
      <item name="android:textColorPrimary">@color/colorDark1</item>
      <item name="android:textColorSecondary">@android:color/white</item>
      <item name="android:colorBackground">@color/colorDark1</item>
  </style>
  <style name="WindowAnimationTransition">
    <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    <item name="android:windowExitAnimation">@android:anim/fade_out</item>
  </style>
</resources>
