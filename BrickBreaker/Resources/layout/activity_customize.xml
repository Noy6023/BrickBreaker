<?xml version="1.0" encoding="utf-8" ?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:id="@+id/tlCustomize"
    android:background="@color/color1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="40sp"
            android:text="@string/customize"
            android:textColor="?android:attr/colorAccent"
            android:gravity="center"
            android:id="@+id/textView1" />
    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="25sp"
            android:text="@string/ballColor"
            android:textColor="?android:attr/colorAccent"
            android:paddingHorizontal="20dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnBallColor"
            android:background="@android:color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="25sp"
            android:text="@string/brickColor"
            android:textColor="?android:attr/colorAccent"
            android:paddingHorizontal="20dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnBrickColor"
            android:background="@android:color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="25sp"
            android:text="@string/batColor"
            android:textColor="?android:attr/colorAccent"
            android:paddingHorizontal="20dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnBatColor"
            android:background="@android:color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="25sp"
            android:text="@string/backgroundColor"
            android:textColor="?android:attr/colorAccent"
            android:paddingHorizontal="20dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnBackgroundColor"
            android:background="@color/color1"/>
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/random"
            android:background="?android:attr/textColorSecondary"
            android:textColor="?android:attr/textColorPrimary"/>
        <Button
            android:id="@+id/btnDefult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defult"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/textColorSecondary"
            android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btnBack"
            android:text="@string/back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="start"
            android:background="?android:attr/textColorSecondary"
            android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>
</TableLayout>
