<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="40sp"
            android:text="@string/customize"
            android:textColor="@color/colorDark1"
            android:gravity="center"
            android:id="@+id/textView1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="25sp"
            android:text="@string/ballColor"
            android:textColor="@color/colorDark1"
            android:gravity="center"
            android:paddingHorizontal="20dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnBallColor"
            android:background="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="25sp"
            android:text="@string/brickColor"
            android:textColor="@color/colorDark1"
            android:gravity="center"
            android:paddingHorizontal="20dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnBrickColor"
            android:background="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="25sp"
            android:text="@string/batColor"
            android:textColor="@color/colorDark1"
            android:gravity="center"
            android:paddingHorizontal="20dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnBatColor"
            android:background="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70.5dp"
            android:textSize="25sp"
            android:text="@string/backgroundColor"
            android:textColor="@color/colorDark1"
            android:gravity="center"
            android:paddingHorizontal="20dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnBackgroundColor"
            android:background="@color/color1"/>
    </LinearLayout>
</LinearLayout>
